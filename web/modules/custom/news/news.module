 * Contains hook implementations for the News module.
 */

/**
 * Implements hook_theme().
 */
function news_theme($existing, $type, $theme, $path) {
  return [
    'news_list' => [
      'variables' => [
        'news_items' => NULL, 
        'categories' => NULL,
        'current_category' => NULL,
        'pager' => NULL,
      ],
      'template' => 'news-list',
    ],
    'news_category' => [ // âœ… Fixed to match controller
      'variables' => [
        'categories' => [],
      ],
      'template' => 'news-categories',
    ],
    'news_category_list' => [
      'variables' => [
        'news_items' => NULL,
        'category' => NULL,
        'pager' => NULL,
      ],
      'template' => 'news-category-list',
    ],
    'news_detail' => [
      'variables' => [
        'node' => NULL, 
        'content' => NULL,
      ],
      'template' => 'news-detail',
    ],
  ];
}

/**
 * Implements hook_menu_local_tasks_alter().
 */
function news_menu_local_tasks_alter(&$local_tasks) {
  $local_tasks['entity.node.add_form']['news.import'] = [
    '#theme' => 'menu_local_task',
    '#link' => [
      'title' => t('Import News'),
      'url' => \Drupal\Core\Url::fromRoute('news.import_form'),
    ],
  ];
}