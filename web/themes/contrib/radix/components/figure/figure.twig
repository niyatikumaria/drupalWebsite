{#
/**
 * @file
 * Template for a Figure component.
 *
 * Available config:
 * - figure_utility_classes: An array of utility classes.
 * - align: left|right|center
 */
#}
{% set figure_classes = ['figure', align ? 'text-' ~ align]|merge(figure_utility_classes ?: []) %}

{% set figure_attributes = figure_attributes ?: create_attribute() %}

<figure {{ figure_attributes.addClass(figure_classes) }}>
  {% block image %}
    {{ image }}
  {% endblock %}

  {% block caption %}
    {% if caption %}
      <figcaption class="figure-caption">
        {{ caption }}
      </figcaption>
    {% endif %}
  {% endblock %}
</figure>
